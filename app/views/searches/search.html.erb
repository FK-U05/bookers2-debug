
<h2>Books search for <%= params[:word] %> </h2>

<table class="table table-hover table-inverse">
  <!-- userを範囲に選んだら -->
  <% if @range == "User" %>
  <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image,size: '50x50' %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show',user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
  <!-- bookを範囲に選んだら -->
  <% elsif @range == "Book" || @model == 'tag' %>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th>Tag</th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
         <%= image_tag book.user.get_profile_image,size: '50x50' %>
        </td>
        <td>
         <%= link_to book_path(book) do %>
         <%= book.title %>
         <% end %>
        </td>
        <td>
          <%= book.body %>
        </td>
        <td>
          <% book.tags.each do |tag| %>
          <%= link_to search_path(word: tag.tag_name, model:"tag", method: "perfect") do %>
          <%= tag.tag_name %>
          <% end %>
          <% end %>
        </td>
        <td class="favorite_buttons_<%= book.id %>">
         <%= render 'favorites/favorite', book: book %>
        </td>
        <td>
         コメント数 : <%= book.book_comments.count %>
        </td>
        <td>
          <div class="star-rate">
            <div id="star-rate-<%= book.id %>"></div>
             <script>
               $('#star-rate-<%= book.id %>').raty({
                 size      : 36,
                 starOff   : '<%= asset_path('star-off.png') %>',
                 starOn    : '<%= asset_path('star-on.png') %>',
                 half      : false,
                 readOnly: true,
                 score: <%= book.star %>,
               });
             </script>
            </div>
         </td>
        </tr>
        <% end %>
         <!-- books.each分の終わり　-->
    </tbody>
     <% end %>
     <!-- if構文の終わり-->
</table>


