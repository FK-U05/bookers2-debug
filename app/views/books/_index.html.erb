 <thead>
  <tr>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
   <th>Tag</th>
   <th colspan="3"></th>
  </tr>
 </thead>
 <tbody>
  <% books.each do |book| %>
  <tr>
   <td>
    <%= link_to(book.user) do %>
    <%= image_tag book.user.get_profile_image, size:'50×50' %>
    <% end %>
   </td>

   <td>
    <%= link_to book.title,book %>
   </td>
   <td>
    <%= book.body %>
    </td>
    <td>
     <% book.tags.each do |tag| %>
     <%= link_to search_path(word: tag.tag_name, model:"tag", method: "perfect") do %>
     <%= tag.tag_name %>
     <% end %>
     <% end %>
    </td>
   <td class="favorite_buttons_<%= book.id %>">
   <%= render 'favorites/favorite', book: book %>
   </td>
   <td>
   コメント数 : <%= book.book_comments.count %>
   </td>

   <td>
     <div class="star-rate">
      <div id="star-rate-<%= book.id %>"></div>
       <script>
       $('#star-rate-<%= book.id %>').raty({
         size      : 36,
         starOff   : '<%= asset_path('star-off.png') %>',
         starOn    : '<%= asset_path('star-on.png') %>',
         half      : false,
         readOnly: true,
         score: <%= book.star %>,
       });
       </script>
    </div>
   </td>
  </tr>
  <% end %>
 </tbody>

