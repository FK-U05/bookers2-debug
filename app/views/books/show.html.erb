<div class='container'>
 <div class='row'>
  <div class='col-md-3'>
   <h2>User info</h2>
    <%= render 'users/info',user: @user %>

     <h2 class="mt-3">New book</h2>
      <%= form_with model: @bookd,local:true do |f| %>
       <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control book_title' %>
       </div>
       <div class="form-group">
        <%= f.label :opinion %>
        <%= f.text_area :body, class: 'form-control book_body' %>
       </div>

       <div class="form-group" id="star">
        <%= f.label :star, 'Raty' %>
        <%= f.hidden_field :star, id: :review_star %>
       </div>

       <script>
       $('#star').raty({
         size     : 36,
         starOff:  '<%= asset_path('star-off.png') %>',
         starOn : '<%= asset_path('star-on.png') %>',

         scoreName: 'book[star]',
         half: false,
       });
       </script>

       <div class="form-group">
        <%= f.submit class: 'btn btn-success' %>
       </div>
      <% end %>
  </div>

  <div class='col-md-8 offset-md-1'>
   <h2>Book detail</h2>
    <table class='table'>
     <tr>
      <td>
       <%= link_to(@book.user) do %>
       <%= image_tag @book.user.get_profile_image, size: '50x50' %><br>
       <%= @book.user.name %>
       <% end %>
      </td>
      <td>
       <%= link_to @book.title, @book %>
      </td>

      <td>
       <%= @book.body %>
      </td>

      <td class="favorite_buttons_<%= @book.id %>">
       <%= render "favorites/favorite", book: @book %>
      </td>


      <td>
       コメント数 : <%= @book.book_comments.count %>
      </td>

      <td>
      <div class="star-rate">
       <div id="star-rate-<%= @book.id %>"></div>
      <script>
      $('#star-rate-<%= @book.id %>').raty({
        size      : 36,
        starOff   : '<%= asset_path('star-off.png') %>',
        starOn    : '<%= asset_path('star-on.png') %>',
        half      : false,
        readOnly: true,
        score: <%= @book.star %>,
      });
     </script>
     </div>
     </td>

       <% if @user == current_user %>
      <td>
       <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %>
      </td>
      <td>
       <%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
       <% end %>
      </td>
     </tr>
    </table>

    <div class="new-comment">
    <%= render 'book_comments/comment', book: @book %>
    </div>

    <div id="comments-area_<%= @book.id %>">
    <%= render 'book_comments/form', book: @book, book_comment: @book_comment %>
    </div>

  </div>
 </div>
</div>