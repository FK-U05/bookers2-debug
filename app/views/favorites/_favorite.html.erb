<% if book.favorited_by?(current_user) %>

   <%= button_to book_favorites_path(book), method: :delete, remote: true do %>
   ❤
   <%= book.favorites.count %>
   <% end %>

<% else %>

   <%= button_to book_favorites_path(book), method: :post, remote: true do %>
   ♡
   <%= book.favorites.count %>
   <% end %>

<% end %>